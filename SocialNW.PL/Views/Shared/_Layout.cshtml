<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="bg-color-pale">
    <header>
        <div class="navbar purple-gradient navbar-fixed-top">
            <div class="container">
                <div class="navbar-header col-md-4">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Application name", "Index", "Home", null, new { @class = "header-brand" })
                </div>
                <div class=" col-md-6">

                    @using (Html.BeginForm(" ", "Home", FormMethod.Post, new { @class = "form-inline" }))
                    {
                        @Html.TextBox("search", "", new { @class = "search" })
                        <button type="submit" class="btn btn-default">Поиск</button>
                    }
                </div>


                <div>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        @Html.ActionLink("Регистрация", "Register", "Account", "", new { @class = "color-text" })
                        <span> / </span>
                        @Html.ActionLink("Войти", "Login", "Account", "", new { @class = "color-text" })
                    }
                    else
                    {
                        <a class="color-text">
                            Привет @User.Identity.Name
                        </a>
                        @Html.ActionLink("Выход", "SignOut", "Account", "", new { @class = "color-text" })}
                </div>

            </div>
        </div>

    </header>


    <div class="container body-content bg-color-pale">
        @RenderBody()
    </div>
    <hr />
    <footer class=" purple-gradient">

        <div class="row">
            <div class="col-md-10 color-pale">
                <h5>@DateTime.Now.Year - Социальная сеть</h5>
            </div>
            <div class="col-md-2 sitemap">
                <h4>Карта сайта</h4>
                @Html.ActionLink("Домашняя страница", "Index", "Home")<br />
            </div>
        </div>

    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>