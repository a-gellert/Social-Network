@model SocialNW.PL.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_FirstLayout.cshtml";
    ViewBag.Title = "Register";
}


<div class="col-md-4 col-md-offset-4 cent semiopacity">
    <h4 class="cent color-text">Регистрация</h4>
    <hr />
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div><label>Email</label></div>
        <div>
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "sign-form-textbox" } })
        </div>
        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "sign-danger" })
        <div><label>Пароль</label></div>
        <div>
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "sign-form-textbox" } })
        </div>
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "sign-danger" })


        <div><label>Повторите пароль</label></div>
        <div>
            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "sign-form-textbox" } })
        </div>
        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "sign-danger" })


        <div><label>Имя</label></div>
        <div>
            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "sign-form-textbox" } })
        </div>
        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "sign-danger" })

        <div><label>Фамилия</label></div>
        <div>
            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "sign-form-textbox" } })
        </div>
        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "sign-danger" })

        <div>
            <input type="submit" value="Регистрация" class="f-btn" />
        </div>

    }
</div>
<div>
    @Html.ActionLink("На главную", "Index", "Home", "", new { @class = "color-pale" })
</div>
<div>
    @Html.ActionLink("Войти", "Login", "Account", "", new { @class = "color-pale" })
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}